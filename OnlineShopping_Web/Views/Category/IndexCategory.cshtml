@model IEnumerable<OnlineShopping_Web.Models.DTO.CategoryDto>
<br />
<div class="container p-4 border">
	<div class="row pb-2">
		<div class="col">
			<h4 class="text-primary">Category List</h4>
		</div>
		<div class="col text-end pt-1">
			<a asp-controller="Category" asp-action="CreateCategory" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i> Create New Category</a>
		</div>
	</div>

	<table class="table">
		<thead>
			<tr>
				<th>
					Id
				</th>
	
				<th>
					Name
				</th>
				
				<th></th>
				<th></th>
				<th></th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>@item.Id</td>
					<td>@item.Name</td>
					<td></td>
					<td></td>
					<td></td>
					<td></td>
					<td></td>
					<td></td>
					<td></td>
					<td></td>
					<td></td>
					<td></td>
					<td></td>
					<td>
						<a asp-controller="Category" asp-action="UpdateCategory" asp-route-categoryId="@item.Id" class="btn btn-success"><i class="bi bi-pencil-square"></i></a>
						<a asp-controller="Category" asp-action="DeleteCategory" asp-route-categoryId="@item.Id" class="btn btn-danger"><i class="bi bi-trash-fill"></i></a>
					</td>
				</tr>
			}
		</tbody>
	</table>

</div>
